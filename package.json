{
  "name": "leave",
  "version": "0.0.1",
  "description": "this is API server for leave application",
  "author": "shafuan",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "doc:build": "npx compodoc -p tsconfig.json",
    "doc:serve": "npx compodoc -p tsconfig.json -s"
  },
  "dependencies": {
    "@nest-modules/mailer": "^1.1.3",
    "@nestjs/azure-storage": "^1.0.2",
    "@nestjs/common": "^6.8.2",
    "@nestjs/core": "^6.8.2",
    "@nestjs/passport": "^5.1.0",
    "@nestjs/platform-express": "^6.8.0",
    "@nestjs/swagger": "^3.1.0",
    "@zencloudservices/xmlparser": "0.0.1",
    "atob": "^2.1.2",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "crypto-js": "^3.3.0",
    "csv-parse": "^4.4.6",
    "dotenv": "^8.2.0",
    "email-templates": "^5.0.3",
    "express": "^4.17.1",
    "fast-xml-parser": "^3.12.13",
    "jsonwebtoken": "^8.4.0",
    "local-storage": "^2.0.0",
    "lodash": "^4.17.19",
    "moment": "^2.24.0",
    "nodemailer": "^6.2.1",
    "nodemailer-smtp-transport": "^2.7.4",
    "passport": "^0.4.0",
    "passport-activedirectory": "^1.0.4",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pug": "^3.0.1",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.2.2",
    "swagger-ui-express": "^4.1.2",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.10",
    "@nestjs/testing": "^6.8.2",
    "@types/crypto-js": "^3.1.43",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/lodash": "^4.14.121",
    "@types/node": "^10.7.1",
    "@types/supertest": "^2.0.5",
    "@types/uuid": "^3.4.4",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "concurrently": "^5.0.0",
    "jest": "^23.5.0",
    "jest-html-reporters": "^1.1.8",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0",
    "typescript": "^3.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleDirectories": [
      "node_modules",
      "./"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-html-reporters",
        {
          "publicPath": "./html-report",
          "filename": "index.html",
          "expand": true
        }
      ]
    ]
  }
}
